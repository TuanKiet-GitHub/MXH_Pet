<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mode.activities.UpdatePassActivity">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:background="#F7F6FF"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            >
            <ImageButton
                android:layout_gravity="start"
                android:id="@+id/viewBack"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="-35dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Update Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/silver"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <LinearLayout
            android:background="#F7F6FF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Current Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:inputType="textPassword"
                    android:text=""
                    android:id="@+id/edCurrentPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="50dp" />

                <ImageView
                    android:id="@+id/imgCurrentPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="290dp"
                    android:src="@drawable/tich"
                    android:visibility="invisible" />

            </RelativeLayout>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="New Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="textPassword"
                    android:text=""
                    android:id="@+id/edNewPass"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/imgNewPass"
                    android:visibility="invisible"
                    android:layout_marginLeft="290dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tich" />


            </RelativeLayout>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Confirm New Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="textPassword"
                    android:text=""
                    android:id="@+id/edConfirmNewPass"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:inputType="textPassword"
                    android:id="@+id/imgConfirmNewPass"
                    android:visibility="invisible"
                    android:layout_marginLeft="290dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tich" />

            </RelativeLayout>


            <Button
                android:id="@+id/updatePassWord"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="30dp"
                android:enabled="false"
                android:text="UPDATE PASSWORD" />

        </LinearLayout>





    </LinearLayout>
</LinearLayout>