<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="80dp">
            <RelativeLayout
                android:id="@+id/relaAvatar"
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgAvatarChat"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/people"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <ImageView
                    android:layout_toLeftOf="@id/imgAvatarChat"
                    android:layout_marginTop="-25dp"
                    android:id="@+id/imgStatusOnline"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/imgAvatarChat"
                    android:src="@drawable/circle_blue" />
                <ImageView
                    android:visibility="invisible"
                    android:layout_toLeftOf="@id/imgAvatarChat"
                    android:layout_marginTop="-25dp"
                    android:id="@+id/imgStatusOffline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/imgAvatarChat"
                    android:src="@drawable/circle_silver" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNameChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="CON MÈO"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMessageChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nuôi mèo thế nào bạn ?"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
                <RelativeLayout
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="-30dp"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:visibility="gone"
                        android:src="@drawable/circle_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:layout_marginTop="-1dp"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white"
                        android:text="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@color/silver"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

    </LinearLayout>

</LinearLayout>