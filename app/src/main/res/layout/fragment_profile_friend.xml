<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".mode.home.ProfileFriendFragment">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_friend"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/bg_login" />
    <TextView
        android:id="@+id/tv_username_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar_friend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:maxLines="1"
        android:text="@{user.full_name}"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_nick_name_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_username_friend"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:text="@{user.nick_name}"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_gender_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nick_name_friend"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/viewLine_friend"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_gender_friend"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@color/my_statusbar_color" />

    <TextView
        android:id="@+id/tv_year_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewLine_friend"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/viewLine1_friend"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_year_friend"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@color/my_statusbar_color" />

    <TextView
        android:id="@+id/tv_address_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewLine1_friend"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/viewLine2_friend"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_address_friend"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@color/my_statusbar_color" />

    <TextView
        android:id="@+id/tv_phoneNumber_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewLine2_friend"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/viewLine3_friend"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_phoneNumber_friend"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@color/my_statusbar_color" />


    <Button
        android:id="@+id/SendRequest_friend"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewLine3_friend"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorButton"
        android:text="Send Request"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/DeclineRequest_friend"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/SendRequest_friend"
        android:layout_centerHorizontal="true"
        android:background="@color/colorButton"
        android:text="Decline Request"
        android:textColor="@color/black" />
</RelativeLayout>
